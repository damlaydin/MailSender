@model MailSender.Models.TemplateSendViewModel

@{
    ViewData["Title"] = "Send Template Email";
}

<h2>Send Template Email</h2>

<form asp-action="SendTemplateEmail" method="post">
    <div class="form-group">
        <label for="SelectedGroupNames">Select Groups</label>
        <select asp-for="SelectedGroupNames" class="form-control js-select2" asp-items="Model.Groups" multiple="multiple">
        </select>
        <span asp-validation-for="SelectedGroupNames" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="TemplateName">Select Template</label>
        <select asp-for="TemplateName" class="form-control js-select2" asp-items="Model.Templates">
            <option value="">-- Select a Template --</option>
        </select>
        <span asp-validation-for="TemplateName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="SelectedUserIds">Select Additional Users (optional)</label>
        <select asp-for="SelectedUserIds" class="form-control js-select2" asp-items="Model.Users" multiple="multiple">
            <option value="">-- None --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Send Mail</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.js-select2').select2({
        });
    </script>
}
