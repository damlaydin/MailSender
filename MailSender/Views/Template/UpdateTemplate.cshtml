@model MailSender.Models.TemplateSendViewModel

@{
    ViewData["Title"] = "Update Template";
}

<h2>Update Template</h2>
<form asp-action="UpdateTemplate" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="GroupName">Select Group</label>
        <select asp-for="GroupName" class="form-control" asp-items="Model.Groups" id="groupSelect">
            <option value="">-- Select a Group --</option>
        </select>
        <span asp-validation-for="GroupName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="TemplateName">Select Template</label>
        <select asp-for="TemplateName" class="form-control" asp-items="Model.Templates" id="templateSelect">
            <option value="">-- Select a Template --</option>
        </select>
        <span asp-validation-for="TemplateName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="TemplateContent">Template Content</label>
        <textarea asp-for="TemplateContent" class="form-control" rows="10" id="templateContent"></textarea>
        <span asp-validation-for="TemplateContent" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Template</button>
</form>


